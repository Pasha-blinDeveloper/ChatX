<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_above="@+id/editTextEmailAddressReg"
        android:layout_centerHorizontal="true"
        android:hint="Name"
        />

    <EditText
        android:id="@+id/editTextPasswordReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/editTextEmailAddressReg"
        android:layout_centerHorizontal="true"
        android:hint="Password"/>

    <EditText
        android:id="@+id/editTextEmailAddressReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_centerInParent="true"
        android:hint="Email"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@color/design_default_color_on_secondary"
        android:layout_below="@+id/editTextPasswordReg"
        android:layout_centerHorizontal="true"
        android:onClick="OnClickSignUp"
        android:text="Sign Up" />
</RelativeLayout>